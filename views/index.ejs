    <%- include('./partials/carosoul.html')%> <%if(products.length>0 ) {%>

    <div class="m-3 row g-5">
      <div class="container-fluid bg-light p-3 mr-3 card-group">
        <%products.forEach(i=>{ %>
          

        <div
          class="col-md-6 col-lg-4 col-xl-3"
          style="width: 18rem"
          id="<%=i.pcatogory%>"
        >
          <a href="/<%=i._id %>/details" style="text-decoration: none">
            <img src="<%=i.pimage%>" class="card-img-top" alt="..." />
            <div class="card-body">
              <center><h5 class="card-title"><%=i.pname%></h5></center>
              <center><h6 class="card-title">Rs.<%=i.pprice%></h6></center>
              <p class="card-text"></p>
            </a> 
            
              <center>
                <form action="/customer/addtocart" method="POST">
                  <input
                    class="form-control text-center me-3"
                    type="num"
                    value="1"
                    style="max-width: 3rem"
                    name="quantity"
                  />
                  <br />
                  <button type="submit" class="btn btn-primary">
                    Add to cart
                  </button>
                  <input type="hidden" name="productid" value="<%=i._id%>" />
                  <input type="hidden" name="price" value="<%=i.pprice%>" />
                  <input type="hidden" name="pname" value="<%=i.pname%>" />
                </form>
              </center>
            </div>
          
        </div>

        <% }) %> <%} else {%>
        <p>There are no products to display...</p>
        <% } %>
      </div>
    </div>
